<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.powtronic.androidlview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.Navigation"
            android:label="NavigationView"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Recyclerview"
            android:label="RecyclerView"
            android:theme="@style/AppTheme.NoActionBar.Translucent" />
        <activity
            android:name=".view.Tab"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.SwipeRefresh"
            android:label="SwipeRefreshView" />
        <activity
            android:name=".view.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.Animation"
            android:theme="@style/AppTheme.NoActionBar.Translucent" />
        <activity android:name=".view.CardViewActivity" />
        <activity android:name=".view.RipperActivity" />
        <activity
            android:name=".view.CoordinatorLayoutActivity"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity android:name=".view.TextInputLayoutActivity" />
        <activity android:name=".view.FloatingActionButton" />
        <activity
            android:name=".view.SnackbarActivity"
            android:label="@string/title_activity_snackbar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.PaletteActivity"
            android:theme="@style/AppTheme.NoActionBar.Translucent"
            android:label="Palette"
            />
    </application>

</manifest>